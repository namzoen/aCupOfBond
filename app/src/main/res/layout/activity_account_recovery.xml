<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:background="@color/purple_500"
    android:gravity="center"
    tools:context=".AccountRecoveryActivity">

    <View
        android:id="@+id/view"
        android:layout_width="720dp"
        android:layout_height="610dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="-1dp"
        android:layout_marginTop="-30dp"
        android:background="@drawable/rectangle" />

    <Button
        android:id="@+id/nextBtn"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_marginStart="220dp"
        android:layout_marginTop="630dp"
        android:padding="10dp"
        android:text="@string/send_help"
        android:textSize="18sp"
        android:gravity="center"
        android:textColor="@color/white"
        android:fontFamily="@font/raleway"
        android:background="@drawable/text_input_box" />


    <Button
        android:id="@+id/backBtn"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="25dp"
        android:layout_marginTop="5dp"
        android:text="@string/back_symbol"
        android:gravity="center_horizontal"
        android:textColor="@color/white"
        android:fontFamily="@font/raleway"
        android:textSize="28sp"
        android:background="@drawable/text_input_box" />

    <TextView
        android:id="@+id/accountRecovLbl"
        android:layout_width="465dp"
        android:layout_height="73dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="80dp"
        android:textColor="#582349"
        android:fontFamily="@font/raleway"
        android:text="@string/account_recovery"
        android:gravity="start"
        android:textSize="30sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/accountDesc"
        android:layout_width="418dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="130dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="30dp"
        android:fontFamily="@font/raleway"
        android:text="@string/accountrecovery"
        android:textStyle="bold"
        android:padding="10dp"
        android:textSize="14sp"
        android:textColorHint="#582349" />

</RelativeLayout>