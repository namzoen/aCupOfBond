<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#582349"
    android:orientation="vertical"
    tools:context=".SignInActivity">

    <ImageView
        android:id="@+id/logo"
        android:layout_width="100dp"
        android:layout_height="132dp"
        android:src="@drawable/logonotext"
        android:layout_marginTop="80dp"
        android:layout_gravity="center_horizontal"
        app:srcCompat="@drawable/logonotext"
        android:contentDescription="@string/a_cup_of_bond_logo" />

    <TextView
        android:id="@+id/emailLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginStart="65dp"
        android:fontFamily="@font/raleway"
        android:text="@string/email_address"
        android:textColor="@color/white"
        android:textSize="15sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.14"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/logo" />

    <EditText
        android:id="@+id/inEmailAddress"
        android:layout_width="291dp"
        android:layout_height="45dp"
        android:layout_marginTop="4dp"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/text_input_box"
        android:fontFamily="@font/raleway"
        android:hint="@string/insertEmail"
        android:inputType="textEmailAddress"
        android:padding="13dp"
        android:textSize="14sp"
        android:autofillHints="email"
        android:textColorHint="@color/grey" />

    <TextView
        android:id="@+id/passwordLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="1dp"
        android:layout_marginStart="65dp"
        android:fontFamily="@font/raleway"
        android:text="@string/password"
        android:textColor="@color/white"
        android:textSize="15sp" />

    <EditText
        android:id="@+id/inPassword"
        android:layout_width="291dp"
        android:layout_height="45dp"
        android:layout_marginTop="4dp"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/text_input_box"
        android:fontFamily="@font/raleway"
        android:hint="@string/insertPassword"
        android:inputType="textPassword"
        android:autofillHints="password"
        android:padding="13dp"
        android:textColorHint="@color/grey"
        android:textSize="14sp" />

    <Button
        android:id="@+id/signIn"
        android:layout_width="110dp"
        android:layout_height="40dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="8dp"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/button_accent"
        android:fontFamily="@font/raleway_bold"
        android:padding="10dp"
        android:paddingTop="8dp"
        android:textSize="14sp"
        android:text="@string/sign_in"
        android:textColor="@color/white" />

    <View
        android:id="@+id/line1"
        android:layout_width="90dp"
        android:layout_height="2dp"
        android:layout_marginStart="65dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="30dp"
        android:background="#ffffff" />

    <TextView
        android:layout_width="110dp"
        android:layout_height="40dp"
        android:layout_marginStart="163dp"
        android:layout_marginEnd="30dp"
        android:layout_marginTop="-10dp"
        android:text="@string/sign_in_option_label"
        android:textColor="#ffffff"
        android:textSize="12sp" />

    <View
        android:id="@+id/line2"
        android:layout_width="90dp"
        android:layout_height="2dp"
        android:layout_marginStart="260dp"
        android:layout_marginTop="-32dp"
        android:layout_marginEnd="30dp"
        android:background="#ffffff" />

    <Button
        android:layout_width="291dp"
        android:layout_height="45dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="15dp"
        android:background="@drawable/text_input_box"
        android:text="@string/log_in_with_google"
        android:textSize="16sp"
        android:textColor="#ffffff"
        android:fontFamily="@font/raleway_semibold"
        android:paddingStart="14dp"
        android:paddingEnd="5dp"
        android:paddingTop="1dp" />

    <ImageView
        android:contentDescription="Google"
        android:layout_width="27dp"
        android:layout_height="27dp"
        android:src="@drawable/google"
        android:layout_marginTop="-37dp"
        android:layout_marginStart="87dp" />

    <Button
        android:layout_width="291dp"
        android:layout_height="45dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="15dp"
        android:background="@drawable/text_input_box"
        android:text="@string/log_in_with_facebook"
        android:textSize="16sp"
        android:textColor="#ffffff"
        android:fontFamily="@font/raleway_semibold"
        android:paddingStart="30dp"
        android:paddingTop="1dp" />

    <ImageView
        android:contentDescription="facebook"
        android:layout_width="27dp"
        android:layout_height="27dp"
        android:src="@drawable/facebook"
        android:layout_marginTop="-37dp"
        android:layout_marginStart="87dp" />

    <Button
        android:layout_width="291dp"
        android:layout_height="45dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="15dp"
        android:background="@drawable/text_input_box"
        android:text="@string/log_in_with_phone_number"
        android:textSize="16sp"
        android:textColor="#ffffff"
        android:fontFamily="@font/raleway_semibold"
        android:paddingStart="20dp"
        android:paddingEnd="0dp"
        android:paddingTop="1dp" />

    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/phonenumber"
        android:layout_marginTop="-37dp"
        android:layout_marginStart="87dp"
        android:contentDescription="@string/phonebook" />

    <TextView
        android:layout_width="135dp"
        android:layout_height="40dp"
        android:layout_marginStart="120dp"
        android:layout_marginTop="20dp"
        android:text="@string/askAccount"
        android:textColor="#ffffff"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/linkSignUp"
        android:layout_width="135dp"
        android:layout_height="40dp"
        android:layout_marginStart="255dp"
        android:layout_marginTop="-40dp"
        android:text="@string/sign_up"
        android:textColor="@color/red"
        android:textSize="12sp" />

    <Button
        android:id="@+id/inTrouble"
        android:layout_width="200dp"
        android:layout_height="45dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="-8dp"
        android:background="@drawable/text_input_box"
        android:text="@string/trouble_signin"
        android:textSize="16sp"
        android:textColor="#ffffff"
        android:fontFamily="@font/raleway_semibold"
        android:padding="10dp" />

</LinearLayout>